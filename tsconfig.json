{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   }, 
   "include": [
      "lib/**/*.ts",
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ],
   "typeRoots": [
      "../node_modules/@types/index.d.ts"
   ]
}